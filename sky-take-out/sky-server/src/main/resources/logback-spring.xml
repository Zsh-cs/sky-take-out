<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入SpringBoot的默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 定义日志文件存放路径 -->
    <property name="LOG_PATH" value="log"/>

    <!-- 控制台输出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 沿用SpringBoot默认的控制台输出格式 -->
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出配置 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名: 按天回滚-->
            <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}/%d{HHmmssSSS}.log</fileNamePattern>
            <!--日志文件保留天数-->
            <!--<maxHistory>30</maxHistory>-->
        </rollingPolicy>
        <encoder>
            <!-- 自定义文件中的日志格式 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 为特定包设置日志级别 -->
    <logger name="com.sky.mapper" level="DEBUG" />
    <logger name="com.sky.service" level="INFO" />
    <logger name="com.sky.controller" level="INFO" />

    <!-- 根日志记录器配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
